<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBGColor"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/textColor"
        android:contentDescription="Back" />

    <!-- Title -->
    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/koho_regular"
        android:text="Latest News"
        android:textColor="@color/textColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Country Selection -->
    <RelativeLayout
        android:id="@+id/country_selection_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_title"
        android:layout_marginTop="24dp"
        android:background="@drawable/center_block_bg"
        android:padding="16dp">

        <TextView
            android:id="@+id/country_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/koho_regular"
            android:text="SELECT COUNTRY"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/country_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/country_label"
            android:layout_marginTop="8dp"
            android:background="@color/blockBGColor"
            android:padding="12dp" />

    </RelativeLayout>

    <!-- Progress Bar -->
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/news_progress_bar"
        style="@style/SpinKitView.FadingCircle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:SpinKit_Color="@color/textColor" />

    <!-- News RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/news_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/country_selection_layout"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

</RelativeLayout>